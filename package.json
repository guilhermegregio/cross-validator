{
    "name": "cross-validator",
    "version": "0.0.5",
    "description": "A Cross Script Validator, node, browser, java",
    "main": "src/index.js",
    "scripts": {
        "pretest": "npm run compile",
        "test": "mocha -R spec test/ test/*/",
        "compile": "tsc --module commonjs test/*.ts test/*/*.ts",
        "build": "webpack",
        "all": "npm test; npm run coverage; npm run minify",
        "watch": "mocha test/*.js test/*/*.js test/*/*/*.js --watch",
        "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha test/*.js test/*/*.js test/*/*/*.js",
        "jshint": "jshint ./src",
        "browserify": "browserify ./src/browserify.js -o ./build/validator.js -s Validator",
        "minify": "npm run browserify; uglifyjs -o ./build/validator.min.js ./build/validator.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/4data/cross-validator.git"
    },
    "keywords": [
        "cross",
        "validate",
        "validator",
        "validating",
        "javascript",
        "java",
        "node"
    ],
    "author": [
        "Guilherme Mangabeira Gregio <guilherme@gregio.net>",
        "Rafael Antonio Lucio <rafaelantoniolucio@gmai.com>",
        "Bruno Zaccaria Marques <zaccabruno@gmail.com>"
    ],
    "license": "MIT",
    "devDependencies": {
        "chai": "^2.2.0",
        "istanbul": "^0.3.6",
        "mocha": "^2.2.4",
        "typescript-loader": "^1.1.3",
        "uglify-js": "^2.4.16",
        "webpack": "^1.8.4"
    },
    "dependencies": {
    }
}
